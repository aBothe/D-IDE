<Window x:Class="D_IDE.Dialogs.CrashDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Runtime error occured" Height="375" Width="589">
    <Grid>
		<TextBox Margin="12,12,12,138" Name="textBox_errorMsg" />
		<Button Content="Close" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button1" VerticalAlignment="Bottom" Width="75" IsCancel="True" IsDefault="True" />
		<Label Content="What were you doing before this happened? (Will be added to the report)" Height="17" HorizontalAlignment="Left" Margin="12,0,0,115" Name="label1" VerticalAlignment="Bottom" Padding="0" Width="411" />
		<TextBox Margin="12,0,12,41" Name="text_userComment" Height="68" VerticalAlignment="Bottom" />
		<Button Content="Send anonymous Report" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="button2" VerticalAlignment="Bottom" Width="152" Click="button2_Click" />
	</Grid>
</Window>
